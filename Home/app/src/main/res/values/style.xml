<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="dp_icon_style">
        <item name="android:src">@drawable/ic_group_36</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
    <style name="hey_user">
        <item name="android:textSize">@dimen/text_20sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">@dimen/padding_25dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="welcome_user">
        <item name="android:textSize">@dimen/text_25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">@dimen/padding_25dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="plan_date">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/text_20sp</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="schedule_section">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_70dp</item>
        <item name="android:background">@drawable/input_bg</item>
    </style>
    <style name="meeting_topic">
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="meeting_timing">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#d4d9d4</item>

    </style>
    <style name="meeting_bullet_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ic_ellipse_4</item>
    </style>
    <style name="plus_sign">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_50sp</item>
        <item name="android:text">@string/plus_sign</item>
    </style>

</resources>