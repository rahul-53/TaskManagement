<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="upper_most_view">
        <item name="android:src">@drawable/rectangle_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_110dp</item>


    </style>

    <style name="back_icon">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_16dp</item>
        <item name="android:src">@drawable/ic_back_icon</item>

    </style>

    <style name="login_text">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:text">@string/login_text</item>
        <item name="android:textSize">@dimen/text_25sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/padding_20dp</item>

    </style>

    <style name="task_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_20sp</item>

    </style>

    <style name="forgot_password">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/forgot_password</item>
        <item name="android:textColor">#4263EC</item>
        <item name="android:textSize">@dimen/text_20sp</item>
    </style>

    <style name="underline_view">
        <item name="android:layout_width">@dimen/wid_160dp</item>
        <item name="android:layout_height">@dimen/height_2dp</item>
        <item name="background">@drawable/rectangle_bg</item>

    </style>

</resources>